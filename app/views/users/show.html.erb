<h1> <%= @user.name %><h1>

<h2> <%= @user.number %> <h2>

<h3><%= link_to "Create new To Do", new_user_todo_path(@user) %>


<% @user.todos.each do |todo| %>
	<h3><%= todo.goal %> : <%= todo.completion_date %></h3>
	<%= link_to "Edit this To Do", edit_todo_path %>
	<%= link_to "Delete this To Do", @todo, method: "delete" %>

<% end %>